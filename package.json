{
  "name": "secure-messenger-desktop",
  "version": "1.0.0",
  "description": "Secure Messenger Desktop - Chat List + Sync Simulator",
  "author": "Secure Messenger Team",
  "homepage": ".",
  "main": "dist/main.js",
  "scripts": {
    "dev": "npm run react-dev",
    "dev:electron": "electron .",
    "react-dev": "react-scripts start",
    "react-build": "react-scripts build",
    "compile": "tsc -p tsconfig.electron.json",
    "build": "npm run react-build && npm run compile && SET CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win --dir",
    "build:all": "npm run react-build && npm run compile && electron-builder -mwl",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.7",
    "better-sqlite3": "^9.0.0",
    "lucide-react": "^0.344.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.3",
    "react-window": "^1.8.10",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.5.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-window": "^1.8.8",
    "@types/uuid": "^10.0.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "react-scripts": "5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
